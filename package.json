{
  "name": "@spark/internal-barrel-maker",
  "version": "1.0.0",
  "description": "Centralized barrel file generator for Spark monorepo",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "barrel-maker": "./src/cli.ts"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "test": "NODE_ENV=test npx vitest",
    "clear": "rm -rf ./.tscache && rm -rf ./.turbo",
    "preinstall": "npx only-allow pnpm",
    "lint:ts": "npx tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json,md}\" \"**/*.config.{js,ts}\"",
    "barrel": "tsx src/cli.ts",
    "example:simple": "cd examples/simple && tsx ../../src/cli.ts",
    "example:complex": "cd examples/complex && tsx ../../src/cli.ts",
    "example:types": "cd examples/types-only && tsx ../../src/cli.ts"
  },
  "exports": {
    "types": "./src/index.ts",
    "import": "./src/index.ts",
    "require": "./src/index.ts"
  },
  "keywords": [
    "barrel",
    "exports",
    "typescript",
    "generator"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "22.15.31",
    "tsx": "^4.19.2",
    "typescript": "5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "glob": "^11.0.3",
    "inflection": "^3.0.0",
    "zod": "3.25.76"
  },
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4"
}
